<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="@color/light_red"
                android:centerColor="@color/light_red"
                android:endColor="@color/light_red"
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5" />
            <stroke 
                android:width="5dp" 
                android:color="@color/red"/>
            <corners android:radius="7dp"/>
            <padding android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
             <gradient 
                android:startColor="@color/light_blue"
                android:centerColor="@color/light_blue"
                android:endColor="@color/light_blue"
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5" />
            <stroke 
                android:width="5dp" 
                android:color="@color/blue"/>
            <corners android:radius="7dp"/>
            <padding android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item >
        <shape>
            <gradient 
                android:startColor="@color/light_green"
                android:centerColor="@color/light_green"
                android:endColor="@color/light_green"
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5" />
            <stroke 
                android:width="5dp" 
                android:color="@color/green"/>
            <corners android:radius="7dp"/>
            <padding android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    

</selector>