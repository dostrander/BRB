<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ParentTheme" parent="android:Theme.NoTitleBar"></style>

    <style name="TestStyle" parent="android:Theme">
        <item name="android:textColor">?attr/secondaryTextColor</item>
    </style>

    <style name="Theme.Default" parent="ParentTheme">
        <item name="primaryTextColor">#FFFFFFFF</item>
        <item name="secondaryTextColor">#EEEEEE</item>
        <item name="darkColor">#FF444444</item>
        <item name="mediumColor">#FF999999</item>
        <item name="lightColor">#FFCCCCCC</item>
        <item name="contrastColor">#FF4444FF</item>
        <item name="styleRefTest">@style/TestStyle</item>
    </style>

    <style name="Theme.Night" parent="ParentTheme">
        <item name="primaryTextColor">#FFFFFFFF</item>
        <item name="secondaryTextColor">#666666</item>
        <item name="darkColor">#FF4444FF</item>
        <item name="mediumColor">#FF9999FF</item>
        <item name="lightColor">#FFCCCCFF</item>
        <item name="contrastColor">#FFFF4444</item>
        <item name="styleRefTest">@style/TestStyle</item>
    </style>

</resources>