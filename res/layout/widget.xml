<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <TextView
        android:id="@+id/widget_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/widget_left_button"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:lines="2"
        android:padding="5dp"
        android:text="Use the arrows to scroll through saved messages"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/widget_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/widget_right_button"
        android:background="@drawable/button_selector"
        android:contentDescription="Left Button"
        android:src="@drawable/arrow_left" />

    <ImageButton
        android:id="@+id/widget_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/widget_button"
        android:background="@drawable/button_selector"
        android:contentDescription="Right Button"
        android:src="@drawable/arrow_right" />

    <ImageButton
        android:id="@+id/widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_selector"
        android:contentDescription="@string/widget_button_content_desc"
        android:src="@drawable/nothing_button" />

    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Icon"
        android:src="@drawable/ic_launcher" />

    <!-- This may seem stupid but this makes it look nice... -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_below="@+id/widget_textview" />

</RelativeLayout>