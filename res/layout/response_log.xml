<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/last_enabled_label"
        android:text="Last Enabled:  " 
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/last_enabled_date"
        android:text="Thursday February 2nd, 2012"
        android:layout_toRightOf="@id/last_enabled_label"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <ListView 
    android:id="@+id/log_entry_list"
    android:layout_below="@+id/last_enabled_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    />
</RelativeLayout>