<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/last_enabled_label"
        android:text=" " 
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/last_enabled_date"
        android:text=" "
        android:layout_toRightOf="@id/last_enabled_label"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <TextView android:id="@+id/no_logs_label"
        android:text="No Logs for this Message"
        android:visibility="gone"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/last_enabled_date"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView 
    android:id="@android:id/list"
    
    android:layout_below="@+id/last_enabled_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    />
</RelativeLayout>